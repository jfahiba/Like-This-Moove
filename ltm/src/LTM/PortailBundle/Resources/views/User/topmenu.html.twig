<!--=== Top ===-->
<div class="top">
    <div class="container">
        <ul class="loginbar pull-right">
            <li><i class="icon-globe"></i><a>{{ 'lang'|trans }} <i class="icon-sort-up"></i></a>
                <ul class="nav-list">
                    <li class="active"><a href="/app.php">{{ 'french'|trans }}</a>  </li>
                    <li class=""><a href="/app.php/en">{{ 'english'|trans }}</a> </li>
                </ul>
            </li>
            <li class="devider">&nbsp;</li>
            <!--li><a href="#" class="login-btn">Aide</a></li>
            <li class="devider">&nbsp;</li-->
            {% if app.user %}
                <li><a href="{{ path('logout') }}" class="login-btn">{{ 'logout'|trans }}</a></li>
                <!--li class="devider">&nbsp;</li>
                <li><a href="{{ path('ltm_usr_modifier') }}">{{ 'modify'|trans ~ ' ' ~ 'my.account'|trans}}</a></li-->
                <li class="devider">&nbsp;</li>
                <li><a href="{{ path('ltm_usr_public', { 'slug': app.user.slug }) }}">{{ 'my.profile'|trans }}</a></li>
				{% set pending = pendingRelationAsk() %}
				{% set unread = nbUnreadMessages() %}
				{%  if pending > 0 %}
				<li class="devider">&nbsp;</li>
				<li>
					<a href="{{ path('ltm_usr_en_attente', {'slug': app.user.slug, 'pending' : pending}) }}">
						 <i class="  icon-user"> {{ pending }}! </i>
					</a>
				</li>				
				{% endif %}
				<li class="devider">&nbsp;</li>
				<li class="nav-header">
					<a href="{{path('ltm_message_inbox')}}"><i class="icon-envelope-alt"> {{ unread}} </i></a>
				</li>
                <li class="devider">&nbsp;</li>
                <li><a href="{{ path('ltm_usr_credit_historique') }}"><i class="icon-credit-card"> {{ app.user.getCredit().getBalance() }}</i></a></li>
                <li class="devider">&nbsp;</li>
				<li><a href="{{ path('ltm_usr_afficher') }}">{{ 'profile.admin'|trans }}</a></li>
            {% else %}
                <li><a href="{{ path('login') }}" class="login-btn">{{ 'login'|trans }}</a></li>
                <li class="devider">&nbsp;</li>
                <!--li><a href="{{ path('ltm_usr_ajouter') }}">{{ 'account.creation'|trans }}</a></li>
                <li class="devider">&nbsp;</li-->
            {% endif %}




        </ul>
    </div>
</div>