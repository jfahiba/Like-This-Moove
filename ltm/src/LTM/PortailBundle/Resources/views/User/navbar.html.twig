<div class="navbar" id="navbar">
<script type="text/javascript">
    try{ace.settings.check('navbar' , 'fixed')}catch(e){}
</script>

<div class="navbar-inner">
<div class="container-fluid">
<a href="#" class="brand">
    <small>
        <i class="icon-leaf"></i>
        {{ 'details.view.profile'|trans }}
    </small>
</a><!--/.brand-->

<ul class="nav ace-nav pull-right">


{% set pending = pendingRelationAsk() %}

<li class="purple">
    {% if pending > 0  %}
    <a data-toggle="dropdown" class="dropdown-toggle" href="#">
        <i class="icon-bell-alt icon-animated-bell }}"></i>
        <span class="badge badge-important">{{ pending }}</span>
    </a>
    {% endif %}
    <ul class="pull-right dropdown-navbar navbar-pink dropdown-menu dropdown-caret dropdown-closer">
        {% if pending > 0  %}
        <li class="nav-header">
            <i class="icon-warning-sign"></i>
            {{ pending ~ ' ' ~ (pending > 1 ? 'notifications'|trans : 'notification'|trans ) }}
        </li>
        {% endif %}

        <!--li>
            <a href="#">
                <div class="clearfix">
											<span class="pull-left">
												<i class="btn btn-mini no-hover btn-pink icon-comment"></i>
												New Comments
											</span>
                    <span class="pull-right badge badge-info">+12</span>
                </div>
            </a>
        </li-->
        {%  if pending > 0 %}
        <li>
            <a href="{{ path('ltm_usr_en_attente', {'slug': user.slug, 'pending' : pending}) }}">
                <i class="btn btn-mini btn-primary icon-user"></i>

                {{ pending ~ ' ' ~ (pending > 1 ? 'to.valid.p'|trans: 'to.valid'|trans ) }}
            </a>
        </li>
        {% endif %}

    </ul>
</li>

{% set unread = nbUnreadMessages() %}
<li class="green">
    <a data-toggle="dropdown" class="dropdown-toggle" href="#">
	
        <i class="icon-envelope {{ unread > 0 ? 'icon-animated-vertical' : '' }}"></i>
        <span class="badge badge-success">{{unread}}</span>
    </a>

    <ul class="pull-right dropdown-navbar dropdown-menu dropdown-caret dropdown-closer">
        <li class="nav-header">
            <i class="icon-envelope-alt"></i>
            {{ unread ~ ' ' ~ unread > 1 ? 'messages'|trans : 'message'|trans }}
        </li>

        <li>
            <a href="{{path('ltm_message_inbox')}}">
                {{ 'messages.see.all'|trans }}
                <i class="icon-arrow-right"></i>
            </a>
        </li>
    </ul>
</li>

<li class="light-blue">
    <a data-toggle="dropdown" href="#" class="dropdown-toggle">
        <img class="nav-user-photo" src="/{{  user.getAbsolutePath() }}" alt="Photo de {{ user.username }}" />
								<span class="user-info">
									<small>{{ 'welcome'|trans }},</small>
									{{ user.username }}
								</span>

								<i class="icon-caret-down"></i>
							</a>

        <ul class="user-menu pull-right dropdown-menu dropdown-yellow dropdown-caret dropdown-closer">
            <li>
                <a href="{{ path('ltm_usr_afficher') }}">
                <i class="icon-cog"></i>
                    {{ 'edit'|trans }}
            </a>
        </li>

        <li>
            <a href="{{ path('ltm_usr_public', { 'slug': user.slug }) }}">
                <i class="icon-user"></i>
                {{ 'public.view'|trans }}
            </a>
        </li>

        <li class="divider"></li>

        <li>
            <a href="{{ path('logout') }}">
                <i class="icon-off"></i>
                {{ 'logout'|trans }}
            </a>
        </li>
</ul>
</li>
</ul><!--/.ace-nav-->
</div><!--/.container-fluid-->
</div><!--/.navbar-inner-->
</div>
