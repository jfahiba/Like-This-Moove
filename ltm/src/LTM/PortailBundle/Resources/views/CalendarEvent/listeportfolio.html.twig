<style>

@media (min-width: 768px) { 
.portfolio-columns div.span3{

height: 10vw;
}
.portfolio-columns .image {
width: 100%;
height: 10vw;
}
}
@media (max-width: 767px) {
.portfolio-columns div.span3{
width: 100% ;
}
.portfolio-columns .image {
width: 100% ;
//height: 50vw;
}
}
</style>


<div class="portfolio-columns portfolio-responsive">
    <div class="row-fluid" >
        <div class="view view-tenth span3" style="display: none">

        </div>
    {% for v in pagination %}
        <div class="view view-tenth span3" style="margin-left: 1.4%">

			{% if v.getAbsolutePath() == null %}
            <img class="image" src="http://placehold.it/700x350&text={{ 'published.by'|trans}} {{v.author.username}}" alt="" />
			{% else %}
			<img class="image" src="/{{v.getAbsolutePath() }}" alt="" />
			{% endif %}
            <div class="mask">
                <h6>{{ v.description |truncate(80, false, '...') }}</h6>
                <a href="{{ path('ltm_calendarevent_afficher', {'slug': v.slug} ) }}" class="info">{{ 'read.more'|trans}}</a>

                {% if (app != null and app.user != null and (app.user.id == v.author.id or (app.user.id == 50 or app.user.id == 54) ))%}
                    <a style="z-index: 1600" class="pull-right" href="{{ path('ltm_calendarevent_modifier', {'slug': v.slug} ) }}"><i class="icon-edit"></i></a>
                {% endif %}

            </div>
            {{ v.author == null? "" : v.author.getUserName() }} - {{ v.start|date ('d/m/Y H:s')  }}
            {#% for s in v.style %} {{ s.nom }}{% endfor %#}
            <br><strong>{{ v.title|truncate(30, false, '...') }}</strong>
        </div>


    {% else %}
        <li>{{ 'event.notfound'|trans}}</li>
    {%  endfor %}

    </div>
</div>



